$ ->
  $('#submit_billing').click ->
    d = new Date()
    $('input#bill_sent_at').val(d.getFullYear() + '-' + (d.getMonth() + 1) + '-' + d.getDate() + ' ' + d.getHours() + ':' + d.getMinutes() + ':' + d.getSeconds())
