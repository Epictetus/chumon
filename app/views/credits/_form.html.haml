= form_for @credit do |f|
  -if @credit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@credit.errors.count, "error")} prohibited this credit from being saved:"
      %ul
        - @credit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :order_id
    = f.number_field :order_id
  .field
    = f.label :credited_at
    = f.datetime_select :credited_at
  .actions
    = f.submit 'Save'
