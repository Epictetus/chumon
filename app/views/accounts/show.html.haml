%p#notice= notice

%p
  %b= @account.class.human_attribute_name(:login)
  \:
  = @account.login
%p
  %b= @account.class.human_attribute_name(:password)
  \:
  = @account.password

%p
  %b= @account.class.human_attribute_name(:roles)
  \:
  %ul
    - @account.roles.each do |role|
      %li= role.name

= link_to 'Edit', edit_account_path(@account)
\|
= link_to 'Back', accounts_path
