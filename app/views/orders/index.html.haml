  %tr
    %th Account
    %th Order code
    %th Customer zip code
    %th Constmer location
    %th Delivery place
    %th Delivering at
    %th Customer name
    %th Company name
    %th Company location
    %th Company zip code
    %th Company phone
    %th Company fax
    %th
    %th
    %th

  - @orders.each do |order|
    %tr
      %td= order.account_id
      %td= order.order_code
      %td= order.customer_zip_code
      %td= order.constmer_location
      %td= order.delivery_place
      %td= order.delivering_at
      %td= order.customer_name
      %td= order.company_name
      %td= order.company_location
      %td= order.company_zip_code
      %td= order.company_phone
      %td= order.company_fax
      %td= link_to 'Show', order
      %td= link_to 'Edit', edit_order_path(order)
      %td= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete

